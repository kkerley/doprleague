<% content_for :title, "Super Bowls" %>
<% content_for :section_subtitle, "All past league Super Bowl information." %>


<div class="row">
    <div class="col-md-8">

        <% @super_bowls.each do |super_bowl| %>
            <p class="h1"><%= link_to super_bowl.year, super_bowl %></p>
            <p class="lead">
                <% unless super_bowl.nfl_team1_id.nil? %>
                    <%= link_to super_bowl.afc_team.full_team_name, super_bowl.afc_team %> 
                    <% unless super_bowl.nfl_team1_final_score.nil? %>
                        (<%= super_bowl.nfl_team1_final_score %>)
                    <% end %>
                <% end %> 
                vs. 
                <% unless super_bowl.nfl_team2_id.nil? %>
                    <%= link_to super_bowl.nfc_team.full_team_name, super_bowl.nfc_team %> 
                    <% unless super_bowl.nfl_team2_final_score.nil? %>
                        (<%= super_bowl.nfl_team2_final_score %>)
                    <% end %>
                <% end %>
                </p>

                <p>
                <% unless super_bowl.nfl_winner_id.nil? %>
                    
                    Super Bowl winner: <%= super_bowl.nfl_winner.full_team_name %><br />
                    <% unless super_bowl.dopr_winner_id.nil? %>
                        DoPR $5 prize winner: <%= link_to super_bowl.dopr_winner.team_name, super_bowl.dopr_winner %>
                    <% end %>
                <% end %>
            </p>

            <hr />
        <% end %>
    </div><!-- end of col-md-8 -->

    <div class="col-md-4">

        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="panel-title"><i class="fa fa-ticket"></i> Super Bowls</p>
            </div>
            <div class="panel-body">
                <ul>
                    <% @super_bowls.each do |super_bowl| %>
                        <li>
                            <%= link_to super_bowl.year, super_bowl %> 
                            <% unless super_bowl.dopr_winner_id.nil? %>
                                DoPR winner: <%= link_to super_bowl.dopr_winner.team_name, super_bowl.dopr_winner %>
                            <% end %> 
                        </li>
                    <% end %>
                </ul>
            </div>
            
        </div><!-- end of panel -->

    </div><!-- end of col-md-4 -->
</div>
