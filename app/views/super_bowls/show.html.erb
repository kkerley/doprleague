<% content_for :title, "#{@super_bowl.year} Super Bowl" %>
<% content_for :section_subtitle, "Information and league member picks for the $5 prize" %>

<p class="h1">
  <% unless @super_bowl.nfl_team1_id.nil? %>
    <%= link_to NflTeam.find(@super_bowl.nfl_team1_id).full_team_name, NflTeam.find(@super_bowl.nfl_team1_id) %>: 
    <%= @super_bowl.nfl_team1_final_score %>

  <% else %> 
    No team yet.
  <% end %>
 vs.
 
  <% unless @super_bowl.nfl_team2_id.nil? %>
    <%= link_to NflTeam.find(@super_bowl.nfl_team2_id).full_team_name, NflTeam.find(@super_bowl.nfl_team2_id) %>:
    <%= @super_bowl.nfl_team2_final_score %>
  <% else %> 
    No team yet.
  <% end %>
</p>


<p class="h3">
  <% unless @super_bowl.nfl_winner_id.nil? %>
    WINNER: <%= link_to NflTeam.find(@super_bowl.nfl_winner_id).full_team_name, NflTeam.find(@super_bowl.nfl_winner_id) %><br />
    <% if @super_bowl.tie_breaker? %>
      Total points scored: <%= @super_bowl.total_points_scored %>
    <% end %>
  <% end %>
</p>

<% unless @super_bowl.dopr_winner_id.nil? %>
  <p>
    $5 Super Bowl pick winner:<br />
    <%= Team.find(@super_bowl.dopr_winner_id).team_name %>
  </p>
<% end %>
<% if current_user %>
<p>
  <% unless @current_user_submitted %>
    No pick entered yet. <%= link_to "Submit your pick now", new_super_bowl_pick_path %>.
  <% else %>
    <%= current_user.display_name %>, you picked <strong><%= @my_pick.nfl_team.full_team_name %></strong> to win the Super Bowl.
  <% end %>
    
</p>
<% end %>
<p class="h2">Current picks</p>
<% unless @picks.empty? %>
<ul>
  <% @picks.each do |p| %>
    <li><%= link_to p.team.team_name, p.team %> chose <%= link_to p.nfl_team.full_team_name, p.nfl_team %> [<%= link_to "pick", p %>]</li>
  <% end %>
</ul>
<% else %>
<p>No picks submitted yet</p>
<% end %>
<%= link_to 'Edit', edit_super_bowl_path(@super_bowl) %> |
<%= link_to 'Back', super_bowls_path %>
