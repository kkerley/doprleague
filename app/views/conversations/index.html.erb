<% content_for :title, "Conversations" %>
<% content_for :section_subtitle, "All messages sent and received." %>


<div class="row">
	<div class="col-md-7">
		<%= render '/teams/mailboxer_toolbar' %>

		<ul class="nav nav-tabs">
		  <li class="active"><a href="#inbox" data-toggle="tab">Inbox</a></li>
		  <li><a href="#sentbox" data-toggle="tab">Sentbox</a></li>
		  <li><a href="#trash" data-toggle="tab">Trash</a></li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
		  <div class="tab-pane active fade in" id="inbox">
		  	<p class="h2">Inbox</p>
		  		<% if mailbox.inbox.count > 0 %>
		  			<%= render mailbox.inbox %>
		  		<% else %>
		  			No messages to display.
		  		<% end %>
		  </div>
		  <div class="tab-pane fade" id="sentbox">
		  	<p class="h2">Sentbox</p>
		  		<% if mailbox.sentbox.count > 0 %>
		  			<%= render mailbox.sentbox %>
		  		<% else %>
		  			No messages to display.
		  		<% end %>
		  		
		  </div>
		  <div class="tab-pane fade" id="trash">
		 	 	<p class="h2">Trash</p>
		 	 		<% if mailbox.trash.count > 0 %>
		  			<%= render mailbox.trash %>
		  		<% else %>
		  			No messages to display.
		  		<% end %>
		  		
			</div>
		</div>
	</div>
</div>