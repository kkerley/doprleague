<% content_for :title, "#{@team.team_name} | #{@team.user.display_name}"%>

<div class="row margin-top-2em">
	<div class="col-md-12">
		<h1><%= @team.team_name %></h1>
		<p class="lead">Managed by <%= @team.user.display_name %> <%= image_tag @team.user.avatar(:mini), :border => 0 %></p>
		<hr />
		<% if current_user %>
		<%= render '/features/admin_control_panel' %>
		<% end %>
		
		
		<div class="row">
			
			<div class="col-md-7"><br />
			
				<div class="panel panel-success">
					<div class="panel-heading">
		          		<p class="panel-title bold"><%= @team.team_name%>'s Payouts</p>
		        	</div>
		        	<div class="panel-body">
					
						<%= render '/users/payout_awards_table', :user => @team.user %>
						
						<% if current_user %>
						<div class="row margin-top-1em">
							<div class="col-md-11">
								<p><span class="glyphicon glyphicon-pencil"></span> <%= link_to "Edit this member", edit_user_path(@team.user) %></p>
							</div>
						</div>
						<% end %>
						
		        	</div>
		      	</div><!-- end of panel -->
			<%= render 'layouts/back_to_top_link' %>
		
			
			
			</div><!-- end of col-md-7-->
			
			<div class="col-lg-offset-1 col-md-4"><br />
				<div class="panel panel-default">
					<div class="panel-heading">
		          		<p class="panel-title bold">The league</p>
		        	</div>
		        	<div class="panel-body">
						<ul>
							<% @current_members.each do |user|%>
								<%= render '/users/member_list_nav', :user => user %>
							<% end %>
						</ul>
					</div>
				</div><!-- end of panel -->
			</div><!-- end of col-md-4-->
			
		</div><!-- end of row -->


<p id="notice"><%= notice %></p>

<p>
  <b>Team name:</b>
  <%= @team.team_name %>
</p>

<p>
  <b>User:</b>
  <%= @team.user.display_name %>
</p>

<% if @team.players.count > 0 %>
<ul>
	<% @team.players.each do |player| %>
		<li><%= player.first_name %> <%= player.last_name %></li>
	<% end %>
	
</ul>
<% else %>
	<p>No players on this team.</p>
<% end %>


<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
