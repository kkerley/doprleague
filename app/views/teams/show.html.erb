<% content_for :title, "#{@team.team_name} | #{@team.user.display_name}"%>

<div class="row margin-top-2em">
	<div class="col-md-12">
		<h1><%= @team.team_name %></h1>
		<p class="lead">Managed by <%= @team.user.display_name %> <%= image_tag @team.user.avatar(:mini), :border => 0 %></p>
		<p>Roster, contracts, budgetary information, awards won to date and other pertinent information.</p>
		<hr />
	</div>
</div>		
		
<div class="row">
			<div class="col-md-7"><br />
			
				<div class="panel panel-success">
					<div class="panel-heading">
		          		<p class="panel-title bold"><%= @team.team_name%>'s Payouts</p>
		        	</div>
		        	<div class="panel-body">
					
						<%= render '/users/payout_awards_table', :user => @team.user %>
						
						<% if current_user %>
						<div class="row margin-top-1em">
							<div class="col-md-11">
								<p><span class="glyphicon glyphicon-pencil"></span> <%= link_to "Edit this member", edit_user_path(@team.user) %></p>
							</div>
						</div>
						<% end %>
						
		        	</div>
		      	</div><!-- end of panel -->
			<%= render 'layouts/back_to_top_link' %>
			</div><!-- end of col-md-7 -->
			
			
	
			
			<div class="col-lg-offset-1 col-md-4 hidden-md hidden-sm hidden-xs"><br />
				<div class="panel panel-default">
					<div class="panel-heading">
		          		<p class="panel-title bold">The league</p>
		        	</div>
		        	
						<table cellspacing="0" cellpadding="0" border="0" class="table table-striped"
							<% @current_members.each do |user|%>
								<%= render '/users/member_list_nav', :user => user %>
							<% end %>
						</table>
					
				</div><!-- end of panel -->
			</div><!-- end of col-md-4-->	
		</div><!-- end of row -->

<div class="row">
			<div class="col-md-12"><br />
				<div class="panel panel-default margin-bottom-4em">
					<div class="panel-heading">
		          		<p class="panel-title bold">Roster</p>
						<small class="muted">Includes active roster spots, dead money, and contract buyouts.</small>
		        	</div>

					
					<table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-condensed">
						<thead>
							<th></th>
							<th>First name</th>
							<th>Last name</th>
							<th>Salary</th>
							<th class="hidden-sm hidden-xs">Position</th>
							<th class="hidden-sm hidden-xs">NFL team</th>
							<th>Bye</th>
					
						</thead>
						
						
						<tbody>
						<% if @team.players.count > 0 %>
							<% @team.players.each do |player| %>
								<tr>
									<td></td>
									<td><%= player.first_name %></td>
									<td><%= player.last_name %></td>
									<td><strong>$<%= player.auction_value %></strong></td>
									<td class="hidden-sm hidden-xs"><%= player.position %></td>
									<td class="hidden-sm hidden-xs"><%= player.nfl_team %></td>
									<td><%= player.bye_week %></td>
								</tr>	
							<% end %>
						
						<% else %>
							<tr>
								<td></td>
								<td colspan="6">No players on this team.</td>
							</tr>
						<% end %>
						
						</tbody>
					</table>		
				</div>
				<%= render 'layouts/back_to_top_link' %>
			</div><!-- end of col-md-7 -->
		</div>