<p class="h4">Eligible for extension:</p>
<ul>
	<% @players_to_extend.each do |p| %>
		<li><i class="fa fa-plus-circle"></i> <%= link_to p.full_name, p %> (<%= p.position %>) for&nbsp;<span class="extended" style="font-weight: bold;">&nbsp;$<%= p.to_extend_now %>&nbsp;</span>&nbsp;in <%= p.current_contract.full_contract_length + p.current_contract.subcontracts.first.contract_year %></li>
	<% end %>
</ul>
<hr />
<p class="h4">Eligible for franchise tags:</p>
<ul>
	<% @players_to_franchise.each do |p| %>
		<li><i class="fa fa-tag"></i> <%= link_to p.full_name, p %> (<%= p.position %>) for&nbsp;<span class="franchised" style="font-weight: bold;">&nbsp;$<%= p.to_franchise_now %>&nbsp;</span>&nbsp;in <%= p.current_contract.full_contract_length + p.current_contract.subcontracts.first.contract_year %></li>
	<% end %>
</ul>