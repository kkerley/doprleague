<h1>Listing awards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>User</th>
	<th>Payout</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @awards.each do |award| %>
  <tr>
    <td><%= award.name %></td>
    <td><%= award.amount %></td>
    <td><%= award.user.display_name %></td>
	<td><% if award.payout %><%= award.payout.year %><% end %>
    <td><%= link_to 'Show', award %></td>
    <td><%= link_to 'Edit', edit_award_path(award) %></td>
    <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

