<%= form_for @user, :html => { :multipart => true, :class => "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :email, :class => 'col-lg-2 control-label' %>
	<div class="col-lg-10">
    	<%= f.text_field :email, :class => 'form-control' %>
	</div>
  </div>
  <div class="form-group">
	<%= f.label :display_name,  "Full name", :class => 'col-lg-2 control-label' %>
	<div class="col-lg-10">
		<%= f.text_field :display_name, :class => 'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
		<%= f.password_field :password, :class => 'form-control' %>
	</div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm", :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
		<%= f.password_field :password_confirmation, :class => 'form-control' %>
	</div>
  </div>

	<div class="form-group">
		
	    <%= f.label :avatar, "Avatar", :class => 'col-lg-2 control-label' %>
	    <div class="col-lg-10">
		<br />Current avatar:<br />
		
		<%= image_tag @user.avatar.url(:thumb) %><br /><br />
	
		<%= f.file_field :avatar, :class => 'form-control' %>
		</div>
	  </div>

	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<label class="checkbox">
				<%= f.check_box :is_current %> Currently in the league?
			</label>
		</div>
	  </div>
  	<% if current_user %>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<label class="checkbox">
				<%= f.check_box :is_admin %> Admin?
			</label>
		</div>
	  </div>
	<% end %>
  	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
	   	 <%= f.submit :class => "btn btn-success btn-large" %>
		</div>
	</div>
<% end %>