<% content_for :title, "League members" %>
<% content_for :section_subtitle, "All members (both past and present) of the Disciples of Philip Rivers Fantasy Football League." %>
		
<div class="row">	
	<div class="col-md-8"><br />
		<% current_philip_members.each do |user| %>
			<div class="panel panel-default">
				<%= render 'member_information', user: user %>	
	      	</div><!-- end of panel -->
			<%= render 'layouts/back_to_top_link' %>
		<% end %>

		<% current_russell_members.each do |user| %>
			<div class="panel panel-default">
				<%= render 'member_information', user: user %>	
	      	</div><!-- end of panel -->
			<%= render 'layouts/back_to_top_link' %>
		<% end %>
	
		<h4 class="margin-top-2em">Past league members</h4>
		<hr />
	
		<% past_members.each do |user| %>
			<div class="panel panel-default">
				<%= render 'member_information', user: user %>		       	
	      	</div><!-- end of panel -->
			<%= render 'layouts/back_to_top_link' %>
		<% end %>
	 
	</div><!-- end of col-md-8-->
	
	<div class="col-md-4 hidden-sm hidden-xs"><br />
		<div class="panel panel-primary">
			<div class="panel-heading">
          		<p class="panel-title bold"><i class="fa fa-list-alt"></i> Current league members</p>
        	</div>
        	
			<table class="table table-striped" cellpadding="0" cellspacing="0" border="0">
				<tr>
						<td colspan="4"><strong>&nbsp;&nbsp;Philip Division</strong></td>
					</tr>
					<% current_philip_members.each do |user|%>
						<%= render '/users/member_list_nav', :user => user %>
					<% end %>
					<tr>
						<td colspan="4"><strong>&nbsp;&nbsp;Russell Division</strong></td>
					</tr>

					<% current_russell_members.each do |user|%>
						<%= render '/users/member_list_nav', :user => user %>
					<% end %>
			</table>
			
		</div><!-- end of panel -->
		<br />
		<div class="panel panel-default">
			<div class="panel-heading">
          		<p class="panel-title bold"><i class="fa fa-list-alt"></i> Past league members</p>
        	</div>
        	
			<table class="table table-hover" cellpadding="0" cellspacing="0" border="0">
				<% past_members.each do |user|%>
					<%= render 'member_list_nav', :user => user %>
				<% end %>
			</table>
			
		</div><!-- end of panel -->
	</div><!-- end of col-md-4-->
</div><!-- end of row -->