<% content_for :title, "NFL Players"%>
<% content_for :section_subtitle, "The full list of available players and all pertinent information" %>

<div class="row">
	<div class="col-md-12"><br />
		<div class="row">
			<div class="col-md-4">

				<div class="panel panel-warning">
					<div class="panel-heading">
		          		<p class="panel-title bold">Search players</p>
						<!--<small class="muted">Some kind of additional text here</small>-->
		        	</div>
						<div class="panel-body">
								<%= form_tag players_path, :class => "form-inline", method: :get do %>
								<div class="form-group"> 
								    <%= text_field_tag :query, params[:query], :class => "form-control", :style => "width: 250px;" %>
								</div>
								<%= submit_tag "Search", name: nil, :class => "btn btn-warning btn-large" %>
								<% end %>
						</div>
				</div>
			</div>
			
			
			<% if current_user %>
				<div class="col-md-5 col-md-offset-3">
		
					<div class="panel panel-success">
						<div class="panel-heading">
			          		<p class="panel-title bold">Import players <small>only .csv accepted at this time.</small></p>
							<small class="muted">Download full list in <%= link_to ".csv", players_path(format: "csv") %> <!-- or <% link_to ".xsl", players_path(format: "xls") %> --></small>
			        	</div>
							<div class="panel-body">
									<%= form_tag import_players_path, :class => "form-inline", multipart: true do %>
									 <div class="form-group"> 
										<%= file_field_tag :file, :class => "form-control", :style => "width: 350px" %><br />
									</div>
									  	<%= submit_tag "Import", :class => "btn btn-success btn-large" %>
								
									<% end %>
							</div>
					</div>
				</div>		
			<% end %>
		
		
		
		</div><!-- end of row -->
			
				
			
			
		<div class="panel panel-default margin-bottom-4em">
			<div class="panel-heading">
          		<p class="panel-title bold">NFL personnel</p>
				<small class="muted">
					Download full list in <%= link_to ".csv", players_path(format: "csv") %> <!-- or <% link_to ".xsl", players_path(format: "xls") %> -->
				</small>
				
        	</div>
        	<div class="search-filters">
        		
				<a href="/players" class="btn btn-default">All</a> 
				<a href="/players?utf8=✓&query=QB" class="btn btn-default">QB</a> 
				<a href="/players?utf8=✓&query=WR" class="btn btn-default">WR</a> 
				<a href="/players?utf8=✓&query=RB" class="btn btn-default">RB</a> 
				<a href="/players?utf8=✓&query=TE" class="btn btn-default">TE</a> 
				<a href="/players?utf8=✓&query=K" class="btn btn-default">K</a> 
				<a href="/players?utf8=✓&query=DEF" class="btn btn-default">DEF</a>
        	</div>
        	<table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-condensed">
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						
						<th class="hidden-sm hidden-xs">Position</th>
						
						<th>Salary</th>
						<th class="hidden-sm hidden-xs">Bye</th>
						<th>Owned by</th>
						
						
						<% if current_user %>
						<th></th>
						<th></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<% @players.each do |player| %>
					<tr>
						<td></td>
						<td><%= link_to player.full_name, player %></td>
						
						<td class="hidden-sm hidden-xs"><%= player.position %></td>
						
						<td><strong>
							<% if player.is_contracted? %>
								$<%= player.this_year.salary_amount %>
							<% else %>
								$<%= player.auction_value %>
							<% end %>
						</strong></td>
						<td class="hidden-sm hidden-xs"><%= player.bye_week %></td>
						<td>
							<% if player.is_contracted? %>
								<span class="label label-danger"><i class="fa fa-check-square-o fa-lg"></i></span> <%= link_to player.this_year.team.team_name, player.this_year.team %>
							<% else %>
								<span class="label label-success">FA</span>
							<% end %>
						</td>
						
					
						<% if current_user %>
							<td><i class="fa fa-pencil-square-o fa-lg"></i> <%= link_to "Edit", edit_player_path(player) %></td>
							<td><i class="fa fa-minus-circle"></i> <%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>	
      	</div><!-- end of panel -->
		
	</div><!-- end of col-md-9 -->
	
</div><!-- end of row -->



