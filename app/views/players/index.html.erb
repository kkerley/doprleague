<% content_for :title, "Players"%>


<div class="row margin-top-2em">
	<div class="col-md-12">
		<h2>Players</h2>
		<p class="lead">The full list of available players, their salaries and who (if anyone) they belong to along with other pertinent contract-related information.</p>
		<hr />


<div class="row">
	<div class="col-md-12"><br />
		<div class="row">
			<div class="col-md-4">

				<div class="panel panel-warning margin-bottom-4em">
					<div class="panel-heading">
		          		<p class="panel-title bold">Search players</p>
						<!--<small class="muted">Some kind of additional text here</small>-->
		        	</div>
						<div class="panel-body">
								<%= form_tag players_path, :class => "form-inline", method: :get do %>
								<div class="form-group"> 
								    <%= text_field_tag :query, params[:query], :class => "form-control", :style => "width: 250px;" %>
								</div>
								<%= submit_tag "Search", name: nil, :class => "btn btn-warning btn-large" %>
								
								<% end %>
						</div>
				</div>
			</div>
			
			
			<% if current_user %>
				<div class="col-md-5 col-md-offset-3">
		
					<div class="panel panel-success margin-bottom-4em">
						<div class="panel-heading">
			          		<p class="panel-title bold">Import players <small>only .csv accepted at this time.</small></p>
							<small class="muted">Download full list in <%= link_to ".csv", players_path(format: "csv") %> or <%= link_to ".xsl", players_path(format: "xls") %></small>
			        	</div>
							<div class="panel-body">
									<%= form_tag import_players_path, :class => "form-inline", multipart: true do %>
									 <div class="form-group"> 
										<%= file_field_tag :file, :class => "form-control", :style => "width: 350px" %><br />
									</div>
									  	<%= submit_tag "Import", :class => "btn btn-success btn-large" %>
								
									<% end %>
							</div>
					</div>
				</div>		
			<% end %>
		
		
		
		</div><!-- end of row -->
			
				
			
			
		<div class="panel panel-default margin-bottom-4em">
			<div class="panel-heading">
          		<p class="panel-title bold">NFL personnel</p>
				<small class="muted">Download full list in <%= link_to ".csv", players_path(format: "csv") %> or <%= link_to ".xsl", players_path(format: "xls") %></small>
        	</div>
        	<table cellspacing="0" cellpadding="0" border="0" class="table table-striped table-condensed">
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						
						<th class="hidden-sm hidden-xs">Position</th>
						<th class="hidden-sm hidden-xs">NFL team</th>		
						<th>Salary</th>
						<th>Bye</th>
						<th class="hidden-sm hidden-xs">DoPR team</th>
						<th class="hidden-sm hidden-xs">Bought out?</th>
						<th class="hidden-sm hidden-xs">Bought out by</th>
						<!-- <th>Dead money?</th>
						<th>Extended?</th>
						<th>Franchised?</th> -->
						<% if current_user %>
						<th></th>
						<% end %>
					</tr>
				</thead>
				<tbody>
					<% @players.each do |player| %>
					<tr>
						<td></td>
						<td><%= link_to player.full_name, player %></td>
						
						<td class="hidden-sm hidden-xs"><%= player.position %></td>
						<td class="hidden-sm hidden-xs"><%= player.nfl_team %></td>
						<td><strong>$<%= best_in_place_if current_user, player, :auction_value, :html_attrs => { :style => 'width: 30px' } %></strong></td>
						<td><%= player.bye_week %></td>
						<td class="hidden-sm hidden-xs">
						
						</td>
						<td class="hidden-sm hidden-xs"><!-- buyout boolean --></td>
						<td class="hidden-sm hidden-xs"><!-- bought out by --></td>
						<!-- <td><% player.is_dead_money %></td>
						<td> player.is_extended </td>
						<td>player.is_franchised</td> -->
					
						<% if current_user %>
							<td><span class="glyphicon glyphicon-pencil"></span> <%= link_to "Edit", edit_player_path(player) %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>	
      	</div><!-- end of panel -->
		
	</div><!-- end of col-md-9 -->
	
</div><!-- end of row -->



