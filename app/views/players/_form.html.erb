<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :nfl_team %><br />
    <%= f.text_field :nfl_team %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br />
    <%= collection_select(:player, :team_id, Team.all, :id, :team_name, :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :auction_value %><br />
    <%= f.number_field :auction_value %>
  </div>

  <div class="field">
    <%= f.label :is_drafted %><br />
    <%= f.check_box :is_drafted %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>