<% content_for :title, "#{@player.full_name} (#{@player.position}) for #{@player.nfl_team}" %>
<% content_for :section_subtitle, "Player and contract information" %>

<div class="row">
	<div class="col-md-12">
		
		<% if @player.contracts %>
			<% @player.contracts.each do |contract|%>
			<p class="h1">Contract details</p>
			<p><%= link_to "Contract", contract %> started in <%= contract.contract_start_year %> for <%= contract.contract_length%> years</p>
			
			<% end %>
		
		<% else %>
			<p>Free agent</p>
		<% end %>
		<%= link_to "Edit #{@player.full_name}", edit_player_path(@player)%>
	</div>
</div>