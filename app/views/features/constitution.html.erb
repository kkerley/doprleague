<% content_for :title, "Articles of the Constitution" %>
<% content_for :section_subtitle, "The entire document defining the rules, regulations and every other aspect of the league. This is kept as up-to-date as possible with all amendments and adjustments from Facebook polls being added as soon as they're ratified by vote." %>


<div class="row">
	<div class="col-md-4 col-md-push-8"><br />
		<div class="panel panel-default">
			<div class="panel-heading">
             	<h3 class="panel-title">Constitution Table of Contents</h3>
           	</div>
           	<div class="panel-body">
             	<ol>
					<% @constitution_features.each do |article| %>
						<li><%= link_to article.title, "#" + article.title %></li>
					<% end %>
				</ol>
           	</div>
		</div><!-- end of panel -->
	</div>
	
	<div class="col-md-8 col-md-pull-4"><br />
		<% @constitution_features.each do |article| %>
			<p><a id="<%= article.title %>">&nbsp;</a><br /><br /></p>
			<p class="h1"><a id="<%= article.title %>"></a><%= article.title %></p>
			<hr />
			<%= RedCloth.new(article.content).to_html.html_safe %>
     
			<% if current_user %>
				<% if can? :manage, article %>
					<br />
					<p><i class="fa fa-pencil-square-o"></i> <%= link_to 'Edit this article', edit_feature_path(article) %></p>
				<% end %>
			<% end %>
	      	<%= render 'layouts/back_to_top_link' %>
		<% end %>

		
	</div><!-- end of col-md-8 -->

</div><!-- end of row -->	
