<% content_for :title, "Constitution"%>

<div class="row margin-top-2em">
	<div class="col-md-12">
		<h2>Articles of the Constitution</h2>
		<p class="lead">The entire document defining the rules, regulations and every other aspect of the league. This is kept as up-to-date as possible with all amendments and adjustments from Facebook polls being added as soon as they're ratified by vote.</p>
		<hr />
		<% if current_user %>
		<%= render 'admin_control_panel' %>
		<% end %>
		
		<div class="row">
			<div class="col-md-8"><br />
			<% @constitution_features.each do |article| %>
				<p><a id="<%= article.title %>">&nbsp;</a><br /><br /></p>
				<p class="headline"><a id="<%= article.title %>"></a><%= article.homepage_order %>. <%= best_in_place_if current_user, article, :title, :html_attrs => { :style => 'width: 600px' } %></p>

				<%= best_in_place_if current_user, article, :content, :type => :textarea, :html_attrs => { :style => 'width: 580px' }, :display_with => lambda { |v| textilize(v).html_safe } %>	      
			 		
				<% if current_user %>
					<br />
					<p><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Edit this article', edit_feature_path(article) %></p>
				<% end %>
		      	<%= render 'layouts/back_to_top_link' %>
			<% end %>
			
		</div><!-- end of col-md-8 -->
		
		<div class="col-md-4"><br />
			<div class="panel panel-danger">
				<div class="panel-heading">
              		<h3 class="panel-title">Constitution Table of Contents</h3>
            	</div>
            	<div class="panel-body">
              		<ol>
					<% @constitution_features.each do |article| %>
						<li><%= link_to article.title, "#" + article.title %></li>
					<% end %>
					</ol>
            	</div>
			</div>
		</div>
     	</div><!-- end of panel -->
	</div><!-- end of col-md-4-->
</div><!-- end of row -->