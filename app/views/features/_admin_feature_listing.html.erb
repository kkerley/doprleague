<tr>
	<td>
			<a name="feature" class="expand" style="cursor: pointer;"><strong><%= feature.title %></strong> <i class="fa fa-angle-down only-this"></i></a>
			<div class="hidden-content admin-hidden">

				<%= best_in_place_if current_user, feature, :content, type: :textarea, html_attrs: { style: 'width: 540px' }, display_with: lambda { |v| textilize(v).html_safe } %><br /><br />
			</div>	
	</td>
	<td>
		<%if feature.is_published? %>
			<span class="label label-success">Yes</span>
		<% else %>
			<span class="label label-danger">No</span>
		<% end %>
	</td>
	<td><%= best_in_place_if current_user, feature, :homepage_order, :html_attrs => { :style => 'width: 16px' } %></td>
	<td><%= link_to edit_feature_path(feature), class: 'label label-warning' do -%><i class="fa fa-pencil-square-o"></i> Edit <% end %></td>
	<td><%= link_to feature, :confirm => 'Are you sure?', method: :delete, class: 'label label-danger' do %><i class="fa fa-minus-circle"></i>  Delete<% end %></td>
</tr>