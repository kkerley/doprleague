<div class="row margin-bottom-half-em">
	<div class="col-md-3">
		
		<%= best_in_place_if current_user, user, :display_name %>
	</div>
	<div class="col-md-4">		
		
		<%= best_in_place_if current_user, user, :email %>
	</div>
	<div class="col-md-1 text-center">
		
			<%if user.is_admin? %>
				<span class="label label-success">Yes</span>
			<% else %>
				<span class="label label-important">No</span>
			<% end %>
	</div>
	
	<div class="col-md-1 text-center"><br /><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-warning btn-small' %></div>
	<div class="col-md-1 text-center"><br /><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-small' %></div>
</div>