<div class="row">
	<div class="col-md-2">
		
		<%= best_in_place_if current_user, user, :display_name %>
	</div>
	<div class="col-md-3">		
		<%= best_in_place_if current_user, user, :email %>
	</div>
	<div class="col-md-2">		
		<%= best_in_place_if current_user, user.team, :team_name %>
	</div>

	<div class="col-md-2">		
		<%= best_in_place_if current_user, user.team, :division %>
	</div>

	<div class="col-md-1">
		
			<%if user.role == "admin" %>
				<span class="label label-success">Yes</span>
			<% else %>
				<span class="label label-danger">No</span>
			<% end %>
	</div>
	
	<div class="col-md-1"><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-warning btn-small' %><br />&nbsp;</div>
	<div class="col-md-1"><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-small' %><br />&nbsp;</div>
</div>