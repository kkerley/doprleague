<h1>Listing subcontracts</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Contract</th>
    <th>Salary amount</th>
	<th>Contract year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subcontracts.each do |subcontract| %>
  <tr>
    <td><%= subcontract.team.team_name %></td>
    <td><%= subcontract.contract_id %></td>
    <td><%= subcontract.salary_amount %></td>
	<td><%= subcontract.contract_year %></td>
    <td><%= link_to 'Show', subcontract %></td>
    <td><%= link_to 'Edit', edit_subcontract_path(subcontract) %></td>
    <td><%= link_to 'Destroy', subcontract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

