<% content_for :title, "Log in" %>
<% content_for :section_subtitle, "Only authorized users past this point" %>


                 
  <div class="row">
	<div class="col-lg-offset-3 col-md-7">
	<%= form_tag sessions_path, :class => "form-horizontal" do %>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="inputEmail">Email</label>
		<div class="col-lg-7">
			 <%= text_field_tag :email, params[:email], :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="inputPassword">Password</label>
		<div class="col-lg-7">
			<%= password_field_tag :password, nil, :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-7">
			<label class="checkbox">
				<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
			</label>
		
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
	   	 <%= submit_tag "Log in", :class => "btn btn-success btn-large" %>
		</div>
	</div>
	<% end %>
	</div>
  </div>
