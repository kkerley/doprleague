<%= labeled_form_for @super_bowl_pick, :html => { :class => "form-horizontal" }, remote: true do |f| %>
  
	<%= f.error_messages %>
  <%= f.hidden_field :super_bowl_id, value: @super_bowl.id %>
  
  <% if @super_bowl_pick.new_record? %>
    <%= f.hidden_field :team_id, value: current_user.team.id %>
    <%= f.select(:nfl_team_id, NflTeam.all.map {|c| [c.full_team_name, c.id]}, { :include_blank => true }, { :class => "form-control" })%>
  <% end %>
  <% if @super_bowl.tie_breaker? %>
    <%= f.text_field :combined_total, label: "Combined total",  class: 'form-control', style: "width: 100px;" %>
  <% end %>
  <%= f.submit  class: "btn btn-success btn-large" %>

<% end %>
