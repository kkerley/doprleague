<% content_for :title, "Activities" %>
<% content_for :section_subtitle, "Information as close to Facebook as this site is going to get. ...for now" %>

<% @activities.each do |activity| %>
  <div class="activity">
  	<div class="row">
  		<div class="col-xs-1">
  			<% image_tag activity.owner.avatar.url(:tiny) %> <% link_to activity.owner.display_name, activity.owner if activity.owner %>
  		</div>
    	<div class="col-xs-11">
    		<% render_activity activity %>
    	</div>
    </div>
  </div>
<% end %>