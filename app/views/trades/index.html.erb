<h1>Listing trades</h1>

<table>
  <tr>
    <th>Trader1</th>
    <th>Trader2</th>
    <th>Is accepted</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trades.each do |trade| %>
  <tr>
    <td><%= trade.trader1_id %></td>
    <td><%= trade.trader2_id %></td>
    <td><%= trade.is_accepted %></td>
    <td><%= trade.notes %></td>
    <td><%= link_to 'Show', trade %></td>
    <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
    <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

